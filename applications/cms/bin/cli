#!/bin/sh

readonly CURRENT_DIR=$(readlink -m $(dirname $0))
readonly HONEYBEE_DIR=$(readlink -m "${CURRENT_DIR}/../vendor/berlinonline/honeybee")
readonly HONEYBEE_BIN_CLI=$(readlink -m "${HONEYBEE_DIR}/bin/cli")

if [ -f $HONEYBEE_BIN_CLI ] ; then
    echo "[INFO] Found honeybee bin/cli."
else
    echo "[ERROR] Honeybee bin/cli script not found: ${HONEYBEE_BIN_CLI}"
    echo "[ERROR] Make sure you have run 'make install' to get vendor libs."
    exit 1
fi

readonly CLI_PHP_FILE=$(readlink -m "${HONEYBEE_DIR}/bin/cli.php")

echo "[INFO] Sourcing: ${HONEYBEE_BIN_CLI}"

. ${HONEYBEE_BIN_CLI}
