#!/usr/bin/env sh

if [ -z "$CURRENT_APPLICATION_DIR" ] ; then
    CURRENT_APPLICATION_DIR=$(readlink -m $(dirname $0))
fi

if [ -z "$HONEYBEE_DIR" ] ; then
    HONEYBEE_DIR=$(readlink -m "${CURRENT_APPLICATION_DIR}/../vendor/berlinonline/honeybee")
fi

if [ -z "$HONEYBEE_BIN_CLI" ] ; then
    HONEYBEE_BIN_CLI=$(readlink -m "${HONEYBEE_DIR}/bin/cli")
fi

if [ -f $HONEYBEE_BIN_CLI ] ; then
    echo "[INFO] Found honeybee bin/cli."
else
    echo "[ERROR] Honeybee bin/cli script not found: ${HONEYBEE_BIN_CLI}"
    echo "[ERROR] Make sure you have run 'make install' to get vendor libs and"
    echo "[ERROR] no environment variables are changing the bin/cli behaviour."
    exit 1
fi

# You can set other (environment) variables to change defaults paths etc.:
#
# LOCAL_CONFIG_SH
# PHP_COMMAND
# AGAVI_ENVIRONMENT
# CLI_PHP_FILE
# CLI_PHP_INI_SETTINGS
# BOOTSTRAP_PHP_FILE
#

echo "[INFO] Sourcing: ${HONEYBEE_BIN_CLI}"

# including original honeybee bin/cli script to execute cli.php
. ${HONEYBEE_BIN_CLI}
