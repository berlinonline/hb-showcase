<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:types_1_0="http://agavi.org/agavi/config/global/types/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/imports/1.0"
    targetNamespace="http://berlinonline.de/schemas/honeybee/config/imports/1.0"
    elementFormDefault="qualified"
>

    <xs:include schemaLocation="./settings.xsd" />

    <xs:complexType name="consumers">
        <xs:sequence>
            <xs:element name="consumer" type="consumer" minOccurs="1" maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="consumer">
        <xs:sequence>
            <xs:element name="description" type="xs:string" minOccurs="0" maxOccurs="1" />
            <xs:element name="provider" type="provider" minOccurs="1" maxOccurs="1" />
            <xs:element name="settings" type="settings" minOccurs="0" maxOccurs="1"/>
            <xs:element name="filters" type="filters" minOccurs="1" maxOccurs="1" />
        </xs:sequence>
        <xs:attribute name="class" type="types_1_0:php_class" use="required" />
        <xs:attribute name="name" type="xs:string" use="required" />
    </xs:complexType>

    <xs:complexType name="provider">
        <xs:sequence>
            <xs:element name="description" type="xs:string" minOccurs="0" maxOccurs="1" />
            <xs:element name="settings" type="settings" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
        <xs:attribute name="name" type="xs:string" use="required" />
        <xs:attribute name="class" type="types_1_0:php_class" use="required" />
    </xs:complexType>

    <xs:complexType name="filters">
        <xs:sequence>
            <xs:element name="filter" type="filter" minOccurs="1" maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="filter">
        <xs:sequence>
            <xs:element name="settings" type="settings" minOccurs="0" maxOccurs="1" />
        </xs:sequence>
        <xs:attribute name="class" type="types_1_0:php_class" use="required" />
        <xs:attribute name="name" type="xs:string" use="required" />
    </xs:complexType>

    <xs:group name="configuration">
        <xs:sequence>
            <xs:element name="consumers" type="consumers" minOccurs="0" maxOccurs="1" />
        </xs:sequence>
    </xs:group>

</xs:schema>
