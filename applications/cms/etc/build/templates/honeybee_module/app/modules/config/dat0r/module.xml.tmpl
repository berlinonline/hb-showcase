<?xml version="1.0" encoding="utf-8" ?>
<module_schema namespace="Honeybee\Domain">

    <module_definition name="%%MODULE_NAME%%">
        <implementor>\Honeybee\Core\Domain\Module\Module</implementor>
        <document_implementor>\Honeybee\Core\Domain\Document\Document</document_implementor>
        <description>Holds the structure definition for %%MODULE_NAME%% documents.</description>
        <option name="identifier_field">identifier</option>
        <option name="slug_pattern">{%%MODULE_PREFIX%%}-{shortId}</option>
        <fields>
            <!-- custom field definitions go here -->

            <!--
            ##############################################################################
            #  Honeybee core fields, don't touch!                                        #
            ##############################################################################
            -->
            <field name="meta" type="key-value">
                <description>Holds a set of generic attributes.</description>
                <option name="constraints">
                    <option name="value_type">dynamic</option>
                </option>
            </field>

            <field name="workflow_ticket" type="aggregate">
                <option name="modules">
                    <option>WorkflowTicket</option>
                </option>
            </field>
        </fields>
    </module_definition>

    <aggregate_definition name="WorkflowTicket">
        <document_implementor>\Honeybee\Core\Domain\Document\WorkflowTicket</document_implementor>
        <description>
            The WorkflowTicket aggregate holds reflects the current state of an documents workflow state.
        </description>
        <fields>
            <field name="workflow_name" type="text" />
            <field name="workflow_step" type="text" />
            <field name="owner" type="text" />
            <field name="blocked" type="boolean" />
            <field name="wait_until" type="text" />
            <field name="step_counts" type="key-value" >
                <option name="constraints">
                    <option name="value_type">integer</option>
                </option>
            </field>
            <field name="last_result" type="aggregate">
                <option name="modules">
                    <option>PluginResult</option>
                </option>
            </field>
        </fields>
    </aggregate_definition>

    <aggregate_definition name="PluginResult">
        <description>
            A PluginResult reflects a state resulting from executing a workflow plugin.
        </description>
        <fields>
            <field name="state" type="integer" />
            <field name="gate" type="text" />
            <field name="message" type="text" />
        </fields>
    </aggregate_definition>

    <!-- custom aggregate and reference definitions go here -->
</module_schema>